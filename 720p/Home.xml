<!--Alaska-->

<window id="0">
	<defaultcontrol always="true">300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<!-- Dummy button to set theme time-depending -->
		<control type="button" id="777">
			<include condition="Skin.HasSetting(autom_themechange)">changethemebytime</include>
			<include condition="Skin.HasSetting(autom_themechange)">autoThemeChange</include>
			<include condition="!Skin.HasSetting(autom_themechange)">noAutoThemeChange</include>
		</control>
		
		<control type="button" id="778">
			<onfocus>XBMC.SetFocus(300)</onfocus>
			<onfocus>RunScript(q:/scripts/PlexAlaska_SwitchTheme/default.py)</onfocus>
		</control>

		<control type="label">
			<include>WindowID</include>
			<label>Home.xml</label>
			<visible>Skin.HasSetting(debugmode)</visible>
		</control>

		<include>Global_Filter</include>

		<include condition="Skin.HasSetting(home1) | [!Skin.HasSetting(home1) + !Skin.HasSetting(home2) + !Skin.HasSetting(home3)]">Home_MenuImage</include>
		<include condition="Skin.HasSetting(home2)">Home_MenuIcon</include>
		<include condition="Skin.HasSetting(home3)">Home_MenuList</include>

		<include>Global_ContextFilter</include>
		<include>Global_Time</include>
		<include>Global_RSS</include>
		<include>Object_DebugGrid</include>
	</controls>
</window>