					<include>Home_MainMenuFrame</include>
					<include>Home_MainMenuShade</include>
					<control type="label">
						<include>Home_MainMenuLabel</include>
						<label>$INFO[Listitem.Label]</label>
						<animation effect="slide" end="16,0" condition="!Container(300).HasFocus(1) | !Container(300).HasFocus(2)">Conditional</animation>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="370" height="320">
				<control type="group" id="778">
					<posx>-185</posx>
					<posy>0</posy>
